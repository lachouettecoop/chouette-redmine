<h1><%= translate 'holidays' %></h1>

<table width="100%" height="80%">
  <tr>
    <td><%= translate 'user'%></td>
    <td><%= translate 'start' %></td>
    <td><%= translate 'end' %></td>
    <td><%= translate 'action' %></td>
  </tr>
  <% @res.each do |row| %>
      <td><%= row.user.blank? ? '' : row.user.login.to_s %></td>
      <td><%= row.start.blank? ? '' : row.start.to_date.to_s %></td>
      <td><%= row.end.blank? ? '' : row.end.to_date.to_s %></td>
      <td><a href="/holidays/show?id=<%= row.id.to_s %>"><%= translate 'show' %></a>&nbsp;<a href="/holidays/destroy?id=<%= row.id.to_s %>"><%= translate 'destroy' %></a></td>
    </tr>
  <% end %>
  <% if @pagination == true %>
  <tr>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
    <td><a href="/holidays/index?page=<%= @last_page.to_s %>"><%= translate 'prev' %></a>&nbsp;<a href="/holidays/index?page=<%= @new_page.to_s %>"><%= translate 'next' %></a></td>
  </tr>
  <% end %>
</table>
<a href="/holidays/new"><%= translate 'new' %></a>
